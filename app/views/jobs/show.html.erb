 <h3> Job listing details: </h3>
 <div class="row card-panel cool-border">
    <div class="row">
      <div class="col s2">Company</div>
      <div class="col s5"><%= @job.company %></div>
    </div>
    <div class="row">
      <div class="col s2">Position</div>
      <div class="col s5"><%= @job.position.capitalize %></div>
    </div>
    <div class="row">
      <div class="col s2">Source</div>
      <div class="col s5"><%= @job.source %></div>
    </div>
    <div class="row">
      <div class="col s2">Date Found</div>
      <div class="col s5"><%= @job.found_date %></div>
    </div>
    <div class="row">
      <div class="col s2">Listing URL</div>
      <div class="col s5"><%= @job.listing_url %></div>
    </div>           
    <div class="row">
      <div class="col s2">Address</div>
      <div class="col s5"><%= @job.address %></div>
    </div>
    <div class="row">
      <div class="col s2">City</div>
      <div class="col s5"><%= @job.city %></div>
    </div>
    <div class="row">
      <div class="col s2">State</div>
      <div class="col s5"><%= @job.state %></div>
    </div>
    <div class="row">
      <div class="col s2">Zip code</div>
      <div class="col s5"><%= @job.zip_code%></div>
    </div>
    <div class="row">
      <div class="col s2">Phone number</div>
      <div class="col s5"><%= @job.phone_number %></div>
    </div>
    <div class="row">
      <div class="col s2">Status</div>
      <div class="col s5"><%= @job.status %></div>
    </div>

    <div class="row">
      <div class="col s2"><h5>Skills:</h5></div>
      <div class="col s10"><% @skills.each do |jobskill| %>
        <p> <%= jobskill.skill.name %>  <%= link_to "Delete this skill", "/jobs/#{@job.id}/job_skills/#{jobskill.id}", method: :delete %> </p> 
        <% end %>
      </div>
    </div>

</div>

<p><%= link_to "Add skill", "/jobs/#{@job.id}/job_skills/new", class: "btn btn-success"%></p>

<h5> <a href="/jobs/<%= @job.id %>/edit"> Edit this job </a></h5>

<h5> <a href="/jobs"> Back to all jobs </a></h5>

