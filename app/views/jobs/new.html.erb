  </div>
  <div class = "form-group">
    <%= label_tag :interview_date  %>
    <%= text_field_tag :interview_date, @job.interview_date, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :offer_date  %>
    <%= text_field_tag :offer_date, @job.offer_date, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :rating  %>
    <%= text_field_tag :rating, @job.rating, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :notes  %>
    <%= text_field_tag :notes, @job.notes, class: "form-control"  %>
  </div>                  
  <div class = "form-group">
    <%= submit_tag "Add job" %>
  </div>
  <a href = "/jobs/"><p> cancel </p></a>
<% end %>


</div>