<h4>New Job Listing:</h4>

<div class="card-panel newjobbox cool-border"> 
<%= form_tag '/jobs', method: :post do %>
  <div class = "form-group">
    <%= label_tag :company %>
    <%= text_field_tag :company, @job.company, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :position  %>
    <%= text_field_tag :position, @job.position, class: "form-control"   %>
  </div>
  <div class = "form-group">
    <%= label_tag :status  %>
    <%= text_field_tag :status, @job.status, class: "form-control"   %>
  </div>
  <div class = "form-group">
    <%= label_tag :source  %>
    <%= text_field_tag :source, @job.source, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :found_date  %>
    <%= text_field_tag :found_date, DateTime.now, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :listing_url  %>
    <%= text_field_tag :listing_url, @job.listing_url, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :address  %>
    <%= text_field_tag :address, @job.address, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :city  %>
    <%= text_field_tag :city, @job.city, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :state  %>
    <%= text_field_tag :state, @job.state, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :zip_code  %>
    <%= text_field_tag :zip_code, @job.zip_code, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :phone_number  %>
    <%= text_field_tag :phone_number, @job.phone_number, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :company_website  %>
    <%= text_field_tag :company_website, @job.company_website, class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= label_tag :hourly_wage  %>
