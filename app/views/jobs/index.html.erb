<div ng-app="app">
 <div ng-controller="jobsCtrl" ng-init="setup()">

<h5> <a href="/jobs/new"> New job listing </a></h5>

<h5> Quick-Add a job listing: </h5>
  <div>
    Company: <input ng-model="inputCompany">
    <br>
    Position: <input ng-model="inputPosition">
    <br>
    Source: <input ng-model="inputSource">
    <br>
    Status: <input ng-model="inputStatus">
    <button ng-click="addJob(inputCompany, inputPosition, inputSource, inputStatus)">Add listing</button>
  </div>


<div class="row card-panel orange">
<h4>Jobs I haven't applied to yet: </h4>
  <div class="row card-panel orange lighten-4" ng-repeat="job in notAppliedJobs | orderBy: updated_at : true">
    <div class="row">
      <div class="col s2">Company</div>
      <div class="col s5">{{job.company}}</div>
    </div>
    <div class="row">
      <div class="col s2">Position</div>
      <div class="col s5">{{job.position}}</div>
    </div>
    <div class="row">
      <div class="col s2">Source</div>
      <div class="col s5">{{job.source}}</div>
    </div>
    <div class="row">
      <div class="col s2">Date Found</div>
      <div class="col s5">{{job.found_date}}</div>
    </div>
    <div class="row">
      <div class="col s2">Status</div>
      <div class="col s5">{{job.status}}</div>
    </div>   
    <p> <a href="/jobs/{{job.id}}">See listing details </a> </p>
  </div>  
</div>

